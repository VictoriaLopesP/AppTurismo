@page
@model AppTurismo.Pages.PaisesDestino.IndexModel

@{
    ViewData["Title"] = "Países Destino";
}

<style>
    body {
        background-color: #ECD9C7;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .turismo-card {
        background-color: #E67C6C;
        border-radius: 8px;
        padding: 24px 32px;
        max-width: 700px;
        margin: 40px auto;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        color: white;
    }

    h1 {
        font-size: 20px;
        margin-bottom: 24px;
        text-align: center;
    }

    a.create-link {
        display: inline-block;
        background-color: #D95A49;
        color: white;
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        margin-bottom: 16px;
    }

        a.create-link:hover {
            background-color: #BF4B3E;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: white;
        color: black;
        border-radius: 6px;
        overflow: hidden;
    }

    th, td {
        padding: 12px 16px;
        border-bottom: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #C75C54;
        color: white;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    td a {
        color: #E67C6C;
        text-decoration: none;
        margin-right: 10px;
        font-weight: bold;
    }

        td a:hover {
            text-decoration: underline;
        }
</style>

<div class="turismo-card">
    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-page="Create" class="create-link">Create New</a>
    </p>

    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.PaisDestino[0].Nome)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PaisDestino)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
